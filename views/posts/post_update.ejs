<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../partial/head %>
</head>

<body>
  <div class="wrapper">
    <div class="main-header">
      <% include ../partial/header %>
			<!-- End Logo Header -->

			<!-- Navbar Header -->
			<% include ../partial/navbar %>
    </div>

    <!-- Sidebar -->
	<% include ../partial/sidebar %>
    <!-- End Sidebar -->

    <div class="main-panel">
      <div class="content ">

        <div class="page-inner mt--6">
          <div class="row mt--2">
            <div class="col-md-8">
              <div class="card full-height bg-light">
                <div class="card-body ">
                  <div class="card-title">User Add</div>
                  <div class="card-category">Hey Guy, Please Add  Your Account</div>
                  <!-- <div class="d-flex flex-wrap justify-content-around pb-2 pt-4"> -->
                  <form class="" action="/posts/postupdate" method="post">
                    <input type="hidden" name="id" value="<%= postupd._id%>">
                    <div class="form-group">
                      <label for="title">Title:</label>
                      <input type="text" class="form-control" id="title" name="title" aria-describedby="titleHelp" value="<%= postupd.title %>">
                      <small id="titleHelp" class="form-text text-muted">We'll never share your title with anyone else.</small>
                    </div>
                    <div class="form-group">
                      <label for="content">Content:</label>
                      <input type="content" class="form-control" id="email" name="content" aria-describedby="contentHelp" value="<%= postupd.content %>">
                      <small id="contentHelp" class="form-text text-muted">We'll never share your content with anyone else.</small>
                    </div>
                    <div class="form-group">
                      <!-- <label for="password">Password</label>
                      <input type="password" class="form-control" id="password" name="password" value="<%= user.password %>"> -->
                      <label for="author">Author Name:</label>
                      <select class="form-control input-border-bottom" id="author" name="author" required>
                        <% for(var i=0; i<users.length; i++){%>
                          <option value="<%=users[i]._id%>" <%= (users[i]._id.equals(postupd.author))? "selected":"" %> > <%=users[i].name%></option>

                      <%  }%>
                      </select>
                    </div>



                </div>
                <div class="card-action">


                  <button type="submit" class="btn btn-success">Submit</button>
                  <!-- <button type="reset" class="btn btn-danger">Cancel</button> -->
                </div>
                </form>

              </div>
            </div>
          </div>


        </div>
      </div>




    </div>
  </div>
  <!-- <footer class="footer"> -->

  <!-- </footer> -->
  </div>

  <!-- Custom template | don't include it in your project! -->
	<% include ../partial/footer %>
  <!-- End Custom template -->
  </div>
  <!--   Core JS Files   -->
<% include ../partial/script %>
</body>

<script type="text/javascript" src="/javascripts/jquery.js">

</script>
</html>


