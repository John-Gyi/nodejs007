<script type="text/javascript" src="/javascripts/jquery.js">

</script>
<script type="text/javascript">
  $('#email').blur(function() {
    console.log('call');
    var data = {
      email1: $('#email').val()
    };
    if (data.email1 != '') {
      $.ajax({
        url: '/duemail',
        data: data,
        type: 'POST',
        success: function(result) {
          if (result.status) {
            alert('duplicate email and not validate ');
            $('#email').val(' ');
            $('#email').focus();
          }
        }

      })
    }
  })
  $('#sub').click(function() {
    var datap = {
      password1: $('#password').val()
    };
    if (datap.password1 != '') {

      $.ajax({
        url: '/passval',
        data: datap,
        type: 'POST',
        success: function(result) {
          if (result.status) {

            if ($('#email').val() == '' || $('#name').val() == '') {
              alert('Please enter other fields');
            } else {

              frm.submit();
            }
          } else {

            alert('validate password and not validate ');
            $('#password').val(' ');
            $('#password').focus();

          }
        }
      })
    }
  })
</script>

</html>
